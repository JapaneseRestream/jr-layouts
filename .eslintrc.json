{
	"root": true,
	"extends": ["hoishin", "hoishin/react", "hoishin/typescript"],
	"env": {"node": true},
	"rules": {
		"new-cap": [2, {"capIsNewExceptions": ["nodecg.Replicant"]}],

		// TODO: tmp
		"@typescript-eslint/strict-boolean-expressions": 0,
		"@typescript-eslint/no-floating-promises": 0,
		"require-atomic-updates": 1,
		"max-statements": 0,
		"import/no-deprecated": 0
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	}
}
