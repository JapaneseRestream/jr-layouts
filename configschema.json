{
	"$schema": "http://json-schema.org/draft-04/schema",

	"type": "object",
	"additionalProperties": false,
	"required": ["spreadsheet"],
	"properties": {
		"spreadsheet": {
			"type": "object",
			"additionalProperties": false,
			"required": ["id", "range"],
			"properties": {
				"id": {
					"type": "string"
				},
				"range": {
					"type": "string"
				}
			}
		},

		"googleApiKey": {
			"type": "string"
		},

		"eventStartTime": {
			"type": "string"
		},

		"twitch": {
			"type": "object",
			"additionalProperties": false,
			"required": ["targetChannel", "ourChannel"],
			"properties": {
				"targetChannel": {
					"type": "string"
				},
				"ourChannel": {
					"type": "string"
				}
			}
		}
	}
}
