{
  "name": "jr-layouts",
  "version": "0.0.0",
  "description": "",
  "nodecg": {
    "compatibleRange": "^0.9.8",
    "assetCategories": [
      {
        "name": "logos",
        "title": "ロゴ",
        "allowedTypes": [
          "png"
        ]
      }
    ],
    "dashboardPanels": [
      {
        "name": "stream",
        "title": "配信担当ダッシュボード",
        "file": "index.html",
        "headerColor": "#9f9bbd",
        "fullbleed": true
      }
    ],
    "graphics": [
      {
        "file": "main.html",
        "width": 1920,
        "height": 1080
      }
    ]
  },
  "xo": {
    "extensions": [
      "js",
      "vue"
    ],
    "globals": [
      "nodecg"
    ],
    "rules": {
      "new-cap": [
        "error",
        {
          "capIsNewExceptions": [
            "nodecg.Replicant"
          ]
        }
      ]
    },
    "overrides": [
      {
        "files": "**/*.vue",
        "plugins": [
          "vue/recommended"
        ]
      }
    ]
  },
  "scripts": {
    "start": "pm2 start ../../index.js --name jr --watch . --watch ../../cfg",
    "restart": "pm2 restart jr",
    "lint": "xo --fix",
    "test": "xo",
    "postinstall": "node -e \"try { require('fs').symlinkSync(require('path').resolve('node_modules/@bower_components'), 'bower_components', 'junction') } catch (e) { }\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JapaneseRestream/jr-layouts.git"
  },
  "author": "Hoishin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JapaneseRestream/jr-layouts/issues"
  },
  "homepage": "https://github.com/JapaneseRestream/jr-layouts#readme",
  "dependencies": {
    "clone": "^2.1.1",
    "pm2": "^2.9.1",
    "superagent": "^3.8.2",
    "twitter-stream-api": "^0.5.2"
  },
  "devDependencies": {},
  "engines": {
    "yarn": ">= 1.0.0"
  }
}
