{
	"private": true,
	"scripts": {
		"postinstall": "yarn --cwd=jr-layouts && ts-node -T scripts/postinstall.ts",
		"reset": "del-cli \"db/*\" \"!.gitkeep\"",
		"start": "node -r ts-node/register node_modules/nodecg"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,html,yml,yaml,md}": [
			"prettier --write",
			"git add"
		],
		"*.{js,jsx,ts,tsx}": [
			"eslint --fix",
			"git add"
		],
		"package.json": [
			"sort-package-json",
			"git add"
		]
	},
	"dependencies": {
		"del-cli": "^1.1.0",
		"nodecg": "^1.4.0",
		"source-map-support": "^0.5.12",
		"ts-node": "^8.1.0",
		"tslib": "^1.9.3",
		"typescript": "3.4.4"
	},
	"devDependencies": {
		"@hoishin/eslint-config-ts": "^0.0.5",
		"@hoishin/prettierrc": "^2.1.1",
		"@hoishin/tsconfig": "^1.0.0",
		"@types/node": "10",
		"bower": "^1.8.8",
		"del": "^4.1.0",
		"eslint": "^5.16.0",
		"eslint-plugin-react": "^7.12.4",
		"eslint-plugin-react-hooks": "^1.6.0",
		"husky": "^1.3.1",
		"lint-staged": "^8.1.5",
		"prettier": "^1.17.0",
		"sort-package-json": "^1.22.1"
	},
	"engines": {
		"node": "10"
	}
}
