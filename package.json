{
  "name": "jr-layouts",
  "version": "0.0.0",
  "description": "",
  "nodecg": {
    "compatibleRange": "^0.9.8",
    "assetCategories": [
      {
        "name": "logos",
        "title": "ロゴ",
        "allowedTypes": [
          "png"
        ]
      }
    ],
    "dashboardPanels": [
      {
        "name": "stream",
        "title": "配信担当ダッシュボード",
        "file": "main.html",
        "headerColor": "#9f9bbd",
        "fullbleed": true
      }
    ],
    "graphics": [
      {
        "file": "main.html",
        "width": 1920,
        "height": 1080
      }
    ]
  },
  "xo": {
    "extends": [
      "plugin:prettier/recommended"
    ],
    "globals": [
      "nodecg"
    ],
    "rules": {
      "new-cap": [2, {
        "capIsNewExceptions": [
          "nodecg.Replicant"
        ]
      }]
    },
    "overrides": [
      {
        "files": "dashboard/**/*",
        "envs": [
          "browser"
        ],
        "plugins": [
          "html"
        ],
        "extensions": [
          "js",
          "html"
        ]
      },
      {
        "files": "graphics/**/*",
        "envs": [
          "browser"
        ],
        "plugins": [
          "html"
        ],
        "extensions": [
          "js",
          "html"
        ]
      }
    ]
  },
  "scripts": {
    "start": "pm2 start ../../index.js --name jr --watch . --watch ../../cfg",
    "restart": "pm2 restart jr",
    "lint": "xo --fix",
    "test": "xo"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JapaneseRestream/jr-layouts.git"
  },
  "author": "Hoishin",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JapaneseRestream/jr-layouts/issues"
  },
  "homepage": "https://github.com/JapaneseRestream/jr-layouts#readme",
  "dependencies": {
    "clone": "^2.1.1",
    "pm2": "^2.9.1",
    "superagent": "^3.8.2",
    "twitter-stream-api": "^0.5.2"
  },
  "devDependencies": {
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-html": "^3.2.2",
    "eslint-plugin-prettier": "^2.4.0",
    "prettier": "1.9.2",
    "xo": "^0.18.2"
  }
}
