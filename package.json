		"*.{js,jsx,ts,tsx,json,html,yml,yaml,md}": [
			"prettier --write",
			"git add"
		],
		"*.{js,jsx,ts,tsx}": [
			"eslint --fix",
			"git add"
		],
		"package.json": [
			"sort-package-json",
			"git add"
		]
	},
	"browserslist": [
		"last 2 chrome versions"
	],
