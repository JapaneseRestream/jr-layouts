{
	"name": "jr-layouts",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"prepare": "simple-git-hooks",
		"build": "run-s build:{schema,vite,server}",
		"build:schema": "nodecg schema-types -o src/nodecg/generated",
		"build:vite": "vite build",
		"build:server": "tsc -b src/extension",
		"clean": "del-cli dashboard graphics extension shared/dist src/nodecg/generated",
		"dev": "run-p dev:*",
		"dev:vite": "vite",
		"dev:ts": "tsc -b src/extension -w --preserveWatchOutput",
		"dev:type": "tsc -b src/browser -w --preserveWatchOutput",
		"dev:schema": "onchange schemas configschema.json -i -- pnpm build:schema",
		"format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,html,yml,yaml,md}\"",
		"prod-build": "cross-env NODE_ENV=production run-s clean build",
		"test": "run-s test:*",
		"test:lint": "eslint --cache \"**/*.{ts,tsx}\"",
		"test:format": "pnpm format --check",
		"test:type": "tsc -p src/browser -p src/extension --noEmit"
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,html,yml,yaml,md}": [
			"prettier --write"
		],
		"*.{js,jsx,ts,tsx}": [
			"eslint --fix"
		],
		"package.json": [
			"sort-package-json"
		]
	},
	"browserslist": [
		"last 2 chrome versions"
	],
	"prettier": "@hoishin/prettierrc",
	"dependencies": {
		"@aws-sdk/client-ec2": "3.319.0",
		"@discordjs/opus": "0.9.0",
		"@emotion/react": "^11.10.6",
		"@emotion/styled": "^11.10.6",
		"@fontsource/roboto": "^4.5.8",
		"@mui/icons-material": "^5.11.16",
		"@mui/material": "^5.12.1",
		"@twurple/api": "6.2.0",
		"@twurple/auth": "6.2.0",
		"app-root-path": "3.1.0",
		"delay": "5.0.0",
		"discord.js": "12.5.3",
		"express": "4.18.2",
		"ffmpeg-static": "5.1.0",
		"filenamify": "6.0.0",
		"googleapis": "118.0.0",
		"lodash": "4.17.21",
		"obs-websocket-js": "4.0.3",
		"tslib": "2.5.0"
	},
	"devDependencies": {
		"@emotion/react": "^11.10.6",
		"@emotion/styled": "^11.10.6",
		"@fontsource/roboto": "^4.5.8",
		"@hoishin/prettierrc": "2.2.0",
		"@mui/icons-material": "^5.11.16",
		"@mui/material": "^5.12.1",
		"@types/app-root-path": "1.2.4",
		"@types/express": "^4.17.17",
		"@types/lodash": "4.14.194",
		"@types/node": "18.16.0",
		"@types/react": "18.0.38",
		"@types/react-dom": "18.0.11",
		"@typescript-eslint/eslint-plugin": "^5.58.0",
		"@typescript-eslint/parser": "^5.58.0",
		"@vitejs/plugin-react": "^4.0.0",
		"cheerio": "1.0.0-rc.12",
		"cross-env": "7.0.3",
		"date-fns": "2.29.3",
		"del": "^7.0.0",
		"del-cli": "5.0.0",
		"eslint": "8.39.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-plugin-react-hooks": "^4.6.0",
		"globby": "13.1.4",
		"lint-staged": "13.2.1",
		"modern-normalize": "1.1.0",
		"nodecg-cli": "8.6.4",
		"npm-run-all": "4.1.5",
		"prettier": "2.8.8",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"rollup": "^3.20.7",
		"simple-git-hooks": "^2.8.1",
		"sort-package-json": "2.4.1",
		"ts-nodecg": "0.3.1",
		"typescript": "~5.0.0",
		"vite": "^4.2.2"
	},
	"nodecg": {
		"compatibleRange": "1 || 2",
		"dashboardPanels": [
			{
				"name": "current-game",
				"title": "現在のゲーム",
				"width": 3,
				"file": "current-game.html",
				"workspace": "1.配信管理"
			},
			{
				"name": "Control",
