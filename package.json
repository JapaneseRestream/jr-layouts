{
	"name": "jr-layouts",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"prepare": "simple-git-hooks || true",
		"clean": "del-cli dashboard graphics extension shared/dist",
		"build": "npm run clean && vite build",
		"dev": "npm run clean && run-p dev:*",
		"dev:vite": "vite",
		"dev:type": "tsc -b src/browser src/extension -w --preserveWatchOutput",
		"dev:schema": "onchange schemas configschema.json -i -- npm run schema-types",
		"format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,html,yml,yaml,md}\"",
		"test": "run-s test:*",
		"test:lint": "eslint \"**/*.{ts,tsx}\"",
		"test:format": "npm run format -- --check",
		"test:type": "tsc -b src/browser src/extension",
		"schema-types": "del-cli \"src/nodecg/generated/*\" && nodecg schema-types -o src/nodecg/generated"
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,html,yml,yaml,md}": [
			"prettier --write"
		],
		"*.{js,jsx,ts,tsx}": [
			"eslint --fix"
		],
		"package.json": [
			"sort-package-json"
		]
	},
	"browserslist": [
		"last 2 chrome versions"
	],
	"prettier": "@hoishin/prettierrc",
	"dependencies": {
		"@aws-sdk/client-ec2": "3.468.0",
		"@emotion/react": "^11.10.6",
		"@emotion/styled": "^11.10.6",
		"@fontsource/roboto": "^4.5.8",
		"@twurple/api": "6.2.1",
		"@twurple/auth": "6.2.1",
		"app-root-path": "3.1.0",
		"delay": "5.0.0",
		"discord.js": "14.14.1",
		"express": "4.18.2",
		"filenamify": "6.0.0",
		"googleapis": "118.0.0",
		"lodash-es": "4.17.21",
		"obs-websocket-js": "4.0.3",
		"tslib": "2.6.2"
	},
	"devDependencies": {
		"@emotion/babel-plugin": "^11.11.0",
		"@emotion/react": "^11.10.6",
		"@emotion/styled": "^11.10.6",
		"@fontsource/roboto": "^4.5.8",
		"@hoishin/prettierrc": "2.2.0",
		"@mui/icons-material": "^5.11.16",
		"@mui/material": "^5.12.1",
		"@types/app-root-path": "1.2.8",
		"@types/express": "^4.17.17",
		"@types/lodash-es": "4.17.12",
		"@types/node": "18.19.2",
		"@types/react": "18.2.42",
		"@types/react-dom": "18.2.17",
		"@typescript-eslint/eslint-plugin": "^6.4.1",
		"@typescript-eslint/parser": "^6.4.1",
		"@vitejs/plugin-react": "^4.0.0",
		"cheerio": "1.0.0-rc.12",
		"cross-env": "7.0.3",
		"date-fns": "2.30.0",
		"del": "^7.0.0",
		"del-cli": "5.1.0",
		"eslint": "8.55.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-react-hooks": "^4.6.0",
		"get-port": "^6.1.2",
		"globby": "13.2.2",
		"lint-staged": "13.3.0",
		"modern-normalize": "1.1.0",
		"nodecg-cli": "8.6.8",
		"npm-run-all": "4.1.5",
		"prettier": "2.8.8",
		"react": "18.2.0",
		"react-dom": "18.2.0",
		"rollup": "^3.20.7",
		"rollup-plugin-esbuild": "^5.0.0",
		"rollup-plugin-node-externals": "^6.0.0",
		"simple-git-hooks": "^2.8.1",
		"sort-package-json": "2.6.0",
		"ts-nodecg": "0.3.1",
		"typescript": "~5.1.0",
		"vite": "^4.2.2"
	},
	"nodecg": {
		"compatibleRange": "1 || 2",
		"dashboardPanels": [
			{
				"name": "current-game",
				"title": "現在のゲーム",
				"width": 3,
				"file": "current-game.html",
				"workspace": "1.配信管理"
			},
			{
				"name": "Control",
				"title": "Control",
				"width": 3,
				"file": "control.html",
				"workspace": "1.配信管理"
			},
			{
				"name": "games-list",
				"title": "ゲームリスト",
				"width": 8,
				"file": "games-list.html",
				"workspace": "1.配信管理"
			},
			{
				"name": "edit-modal",
				"title": "編集",
				"width": 4,
				"file": "edit-modal.html",
				"dialog": true,
				"dialogButtons": [
					{
						"name": "save",
						"type": "confirm"
					},
					{
						"name": "cancel",
						"type": "dismiss"
					}
				]
			},
			{
				"name": "admin",
				"title": "Admin",
				"width": 4,
				"file": "admin.html",
				"workspace": "2.設定"
			}
		],
		"graphics": [
			{
				"file": "main.html",
				"width": 1920,
				"height": 1080
			}
		]
	}
}
