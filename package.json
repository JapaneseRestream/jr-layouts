{
	"name": "jr-layouts",
	"private": true,
	"scripts": {
		"build": "run-p test bundle",
		"bundle": "webpack",
		"clean": "del-cli dashboard graphics extension bundle-analyzer",
		"postinstall": "include-nodecg postinstall",
		"prod-build": "cross-env NODE_ENV=production yarn build",
		"start": "include-nodecg start",
		"test": "tsc -b src/browser src/extension",
		"watch": "webpack -w"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx,json,html,yml,yaml,md}": [
			"prettier --write",
			"git add"
		],
		"*.{js,jsx,ts,tsx}": [
			"eslint --fix",
			"git add"
		],
		"package.json": [
			"sort-package-json",
			"git add"
		]
	},
	"browserslist": [
		"last 2 chrome versions"
	],
	"prettier": "@hoishin/prettierrc",
	"dependencies": {
		"axios": "0.19.0",
		"discord.js": "11.5.1",
		"ffmpeg-binaries": "4.0.0",
		"googleapis": "41.0.0",
		"include-nodecg": "0.0.1-5",
		"joi": "14.3.1",
		"lodash": "4.17.14",
		"moment": "2.24.0",
		"node-opus": "0.3.2",
		"nodecg": "1.4.0",
		"source-map-support": "0.5.12",
		"tslib": "1.10.0",
		"typescript": "3.5.3"
	},
	"devDependencies": {
		"@babel/core": "7.5.4",
		"@babel/preset-env": "7.5.4",
		"@hoishin/eslint-config-ts": "0.0.5",
		"@hoishin/prettierrc": "2.1.1",
		"@hoishin/tsconfig": "2.0.0",
		"@material-ui/core": "3.9.3",
		"@material-ui/icons": "3.0.2",
		"@types/html-webpack-plugin": "3.2.1",
		"@types/joi": "14.3.3",
		"@types/lodash": "4.14.136",
		"@types/mini-css-extract-plugin": "0.2.1",
		"@types/node": "10.14.12",
		"@types/react": "16.8.23",
		"@types/react-dom": "16.8.4",
		"@types/styled-components": "4.1.18",
		"@types/webpack": "4.4.35",
		"@types/webpack-bundle-analyzer": "2.13.1",
		"@types/webpack-merge": "4.1.5",
		"@types/webpack-node-externals": "1.6.3",
		"@typescript-eslint/parser": "1.12.0",
		"babel-loader": "8.0.6",
		"cross-env": "5.2.0",
		"css-loader": "2.1.1",
		"del-cli": "1.1.0",
		"eslint": "5.16.0",
		"eslint-plugin-react": "7.14.2",
		"eslint-plugin-react-hooks": "1.6.1",
		"file-loader": "3.0.1",
		"globby": "9.2.0",
		"html-webpack-plugin": "4.0.0-beta.7",
		"husky": "3.0.0",
		"lint-staged": "8.2.1",
		"mini-css-extract-plugin": "0.7.0",
		"npm-run-all": "4.1.5",
		"prettier": "1.18.2",
		"react": "16.8.6",
		"react-dom": "16.8.6",
		"sort-package-json": "1.22.1",
		"styled-components": "4.3.2",
		"ts-loader": "6.0.4",
		"ts-node": "8.3.0",
		"ts-nodecg": "0.1.1",
		"webpack": "4.35.3",
		"webpack-bundle-analyzer": "3.3.2",
		"webpack-cli": "3.3.0",
		"webpack-merge": "4.2.1",
		"webpack-node-externals": "1.7.2"
	},
	"engines": {
		"node": "10"
	},
	"nodecg": {
		"compatibleRange": "^1.0.0",
		"dashboardPanels": [
			{
				"name": "current-game",
				"title": "現在のゲーム",
				"width": 3,
				"file": "current-game.html",
				"workspace": "配信管理"
			},
			{
				"name": "twitch-info",
				"title": "Twitch",
				"width": 3,
				"file": "twitch-info.html",
				"workspace": "配信管理"
			},
			{
				"name": "games-list",
				"title": "ゲームリスト",
				"width": 8,
				"file": "games-list.html",
				"workspace": "配信管理"
			},
			{
				"name": "misc-controls",
				"title": "その他操作",
				"width": 3,
				"file": "misc-controls.html",
				"workspace": "配信管理"
			},
			{
				"name": "edit-modal",
				"title": "編集",
				"width": 4,
				"file": "edit-modal.html",
				"dialog": true,
				"dialogButtons": [
					{
						"name": "save",
						"type": "confirm"
					},
					{
						"name": "cancel",
						"type": "dismiss"
					}
				]
			}
		],
		"graphics": [
			{
				"file": "main.html",
				"width": 1920,
				"height": 1080
			}
		]
	}
}
